--------------------Tabla Pacientes--------------------------------------------
CREATE TABLE Paciente
(Cedula NUMBER(15) NOT NULL,
NAME VARCHAR(30) NOT NULL,
LAST_NAME VARCHAR(30) NOT NULL,
Domicilio VARCHAR(30) NOT NULL,
Telefono NUMBER(3) NOT NULL
);
